{
  "name": "portablegreatvault",
  "version": "0.0.0-development",
  "private": true,
  "description": "WoW addon to add a minimap button for the Great Vault.",
  "homepage": "https://github.com/ToppleTheNun/GreatVaultAnywhere#readme",
  "bugs": {
    "url": "https://github.com/ToppleTheNun/GreatVaultAnywhere/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToppleTheNun/GreatVaultAnywhere.git"
  },
  "license": "MIT",
  "author": "Richard Harrah <topplethenunnery@gmail.com>",
  "scripts": {
    "commit": "cz",
    "lint": "eslint src",
    "prepare": "tstolua -p tsconfig.lua.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "dependencies": {
    "@types/node": "^14.14.14",
    "@wowts/ace_console-3.0": "^1.1.0",
    "@wowts/ace_db-3.0": "^1.3.0",
    "@wowts/lib_d_b_icon-1.0": "^1.1.0",
    "@wowts/lib_data_broker-1.1": "^1.1.0",
    "@wowts/lua": "^1.6.0",
    "@wowts/tsaddon": "^1.3.0",
    "@wowts/tslib": "^1.3.1",
    "@wowts/wow-mock": "^1.26.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "@wowts/tstolua": "^1.13.2",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.8",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  }
}
